<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imgSneakerEntry"
            android:layout_width="@dimen/img_sneaker_layout_h_w"
            android:layout_height="@dimen/img_sneaker_layout_h_w"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

        <EditText
            android:id="@+id/txtSneakerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgSneakerEntry"
            android:layout_centerHorizontal="true"
            android:hint="@string/shoe_name_hint"
            android:textSize="@dimen/sneaker_name_txtsz"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtSneakerBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtSneakerName"
            android:layout_marginLeft="@dimen/sneaker_brand_marginLeft"
            android:layout_marginTop="@dimen/sneaker_brand_marginTop"
            android:hint="@string/shoe_brand_hint" />

        <EditText
            android:id="@+id/txtSneakerRarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtSneakerBrand"
            android:layout_marginLeft="@dimen/sneaker_brand_marginLeft"
            android:hint="@string/shoe_rarity_hint" />

        <EditText
            android:id="@+id/txtSellingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtSneakerRarity"
            android:layout_marginLeft="@dimen/sneaker_brand_marginLeft"
            android:hint="@string/selling_price_hint" />

        <EditText
            android:id="@+id/txtSneakerCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSneakerName"
            android:layout_centerHorizontal="true"
            android:hint="@string/shoe_categ_hint"
            android:textSize="@dimen/sneaker_edit_txtsz" />

        <EditText
            android:id="@+id/txtSneakerDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSellingValue"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/sneaker_desc_sideMargin"
            android:layout_marginRight="@dimen/sneaker_desc_sideMargin"
            android:layout_marginTop="@dimen/sneaker_desc_marginTop"
            android:hint="@string/shoe_desc_hint" />

        <Button
            android:id="@+id/btnSaveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSneakerDescription"
            android:layout_centerHorizontal="true"
            android:text="@string/save_data" />
    </RelativeLayout>

</ScrollView>